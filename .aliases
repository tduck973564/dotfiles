export CFLAGS="-Wall -Wextra -Werror=all,extra -pedantic-errors -Wshadow -Wformat=2 -Wformat-truncation -Wformat-overflow -Wundef -Wdocumentation"
export CC=/usr/bin/clang
export CXX=/usr/bin/clang++

alias clang="clang $CFLAGS"
alias gcc="gcc $CFLAGS"

alias new-meson-exec="meson init --build; meson setup build"
